<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardBackgroundColor="@color/colorCardViewBackground"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/symbol_moneda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginEnd="1dp"
                android:textSize="20sp"
                android:text="to"/>
            <TextView
                android:id="@+id/symbol_moneda_convertida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/valor_moneda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="69"
                android:gravity="right"
                android:autoSizeTextType="uniform"
                android:textSize="20sp"
                android:maxLines="1"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/importe_porcentaje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:gravity="right"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/porcentaje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_alignEnd="@+id/symbol_moneda_convertida"
                android:gravity="right"
                />

        </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>